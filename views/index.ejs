<section id="first-frame" class="container">
    <div class="intro">
        <h1 class="mb-3">Currency Converter</h1>
        <p>Check live exchange rates for free! The LabCoatCoder converter makes it easy to switch between all major world currencies.</p>
    </div>
        <div class="calculator container">
            <div class="converter-box upper">
                <div class="input-section">
                    <div class="form-group">
                        <label for="box1Input">You send</label>
                        <input type="text" id="box1Input" name="box1" placeholder="0.00">
                    </div>
                </div>
                
                <div class="currency-section" >
                    <div class="form-group">
                        <div class="currency-selector" id="selector1" data-code="USD" data-rate="1">
                            <div class="flag-box">
                                <span class="fi fi-us fis"></span>
                            </div>
                            <p>USD</p>
                            <i class="bi bi-chevron-double-down"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="converter-box lower">
                <div class="input-section">
                    <div class="form-group">
                        <label for="box2Input">They get</label>
                        <input type="text" id="box2Input" name="box2" placeholder="0.00">
                    </div>
                </div>
                
                <div class="currency-section">
                    <div class="form-group">
                        <div class="currency-selector" id="selector2" data-code="NGN" data-rate="1504.1767">
                            <div class="flag-box">
                                <span class="fi fi-ng fis"></span>
                            </div>
                            <p>NGN</p>
                            <i class="bi bi-chevron-double-down"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div id="conversion-rate">
                <p>1 USD<i class="bi bi-arrow-left-right"></i>= 1507 NGN</p>
            </div>
        </div>
